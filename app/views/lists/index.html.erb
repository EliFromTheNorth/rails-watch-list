<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://storage.needpix.com/rsynced_images/banner-949931_1280.jpg);">
  <div class="container">
    <h1>Watch list</h1>
    <p>Your movie wish lists are never gonna be messy again!</p>
    <%= link_to "Create list", new_list_path, class: "btn btn-ghost" %>

  </div>
</div>

<h2>My Lists</h2>

<ul>
  <div class="cards">
    <% @lists.each do |categorylist| %>
      <li><%= link_to list_path(categorylist) do %>
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= image_path "Sci-fi_fantasy_japan" %>)">
          <p><%= categorylist.name %></p>
        </div>
      <% end %>
    </li>
    <% end %>
  </div>
</ul>


<%#= cl_image_tag @list.photo.key, height: 300, width: 400, crop: :fill %>

